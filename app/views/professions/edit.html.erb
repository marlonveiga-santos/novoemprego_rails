<% @profession.errors.full_messages.each do |message| %>
    <p><%= message %></p>
<% end %>

<%= form_for @profession, local:true do |f| %>
  <div class="field">
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :job_role %>
    <%= f.text_field :job_role %>
  </div>
  <div class="field">
    <%= f.label :job_area, "Tipo" %>
    <%= f.select :job_area, options_for_select(@types), :class => "custom-select custom-select-lg mb-3" %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :attributions %>
    <%= f.text_field :attributions %>
  </div>

  <div class="field">
    <%= f.label :salary %>
    <%= f.number_field :salary, step: 100 %>
  </div>

  <%= f.submit 'Enviar' %>
<% end %>
