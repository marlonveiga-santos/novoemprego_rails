<% @job.errors.full_messages.each do |message| %>
    <p><%= message %></p>
<% end %>

<%= form_for @job, local:true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :habilities %>
    <%= f.text_field :habilities %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :level, "Tipo" %>
    <%= f.select :level, options_for_select(Job.levels.keys), 
    :class => "custom-select custom-select-lg mb-3" %>
  </div>
  <div class="field">
    <%= f.label :salary %>
    <%= f.number_field :salary, step: 100 %>
  </div>
  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <%= f.submit 'Enviar' %>
<% end %>